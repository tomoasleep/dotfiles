{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message | @sh' | xargs -n 1 sh -c 'terminal-notifier -title \"Claude Code\" -message $0'"
          }
        ]
      }
    ]
  }
}

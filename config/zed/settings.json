// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent_servers": {
    "Example Agent": {
      "type": "custom",
      "command": "npx",
      "args": [
        "tsx",
        "/Users/tomoya/.ghq/github.com/agentclientprotocol/typescript-sdk/src/examples/agent.ts",
      ],
      "env": {},
    },
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
  },
  "theme": "Everforest Light Medium (material)",
  "buffer_font_size": 14,
  "ui_font_family": "HackGen35 Console",
  "vim_mode": true,
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "terminal": {
    "dock": "right",
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
  },
  "lsp": {
    "steep": {},
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "steep"],
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
        "source.organizeImports": true,
      },
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
  },
}
